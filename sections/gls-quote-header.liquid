{{ 'gls-request-quote.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .gls-quote-section--header .gls-quote-header {
    max-width: {{ section.settings.section_width }}px;
    justify-content: {{ section.settings.horizontal_alignment }};
    align-items: {{ section.settings.vertical_alignment }};
  }
  .gls-quote-header__image {
    width: {{ section.settings.header_image_width }}px;
    height: {{ section.settings.header_image_width }}px;
  }
  .gls-quote-header__title {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};  }
  .gls-quote-header__tagline {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.tagline_color }};
  }
{%- endstyle -%}

<div class="gls-quote-section gls-quote-section--header">
  <div class="gls-quote-container">
    
    <!-- Breadcrumbs -->
    <nav class="gls-breadcrumbs" aria-label="Breadcrumb">
      <a href="{{ routes.root_url }}">Home</a>
      <span>/</span>
      <span aria-current="page">{{ page.title }}</span>
    </nav>

    <!-- Page Header -->
    <div class="gls-quote-header">
      {%- if section.settings.header_image != blank -%}
        <div class="gls-quote-header__image-wrapper">
          <img 
            src="{{ section.settings.header_image | image_url: width: section.settings.header_image_width }}" 
            alt="{{ section.settings.heading | escape }}"
            class="gls-quote-header__image"
            width="{{ section.settings.header_image_width }}"
            height="{{ section.settings.header_image_width }}"
            loading="eager"
          >
        </div>
      {%- endif -%}
      
      <div class="gls-quote-header__content">
        <{{ section.settings.heading_tag | default: 'h1' }} class="gls-quote-header__title">
          {{ section.settings.heading | default: page.title }}
        </{{ section.settings.heading_tag | default: 'h1' }}>
        
        {%- if section.settings.tagline != blank -%}
          <p class="gls-quote-header__tagline">{{ section.settings.tagline }}</p>
        {%- endif -%}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Quote Page Header",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "section_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Section Max Width",
      "default": 800
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "Horizontal Alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" },
        { "value": "space-between", "label": "Space Between" },
        { "value": "space-around", "label": "Space Around" }
      ],
      "default": "flex-start"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical Alignment",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Middle" },
        { "value": "flex-end", "label": "Bottom" },
        { "value": "stretch", "label": "Stretch" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Page Header"
    },
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Image/Icon"
    },
    {
      "type": "range",
      "id": "header_image_width",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Image Width",
      "default": 120
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Page Title",
      "default": "Request A Quote"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Title Color",
      "default": "#111111"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 64,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 36
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h1"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Get a personalized quote for your bulk packaging needs within 24 hours."
    },
    {
      "type": "color",
      "id": "tagline_color",
      "label": "Tagline Color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "tagline_size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Tagline Font Size",
      "default": 18
    }
  ],
  "presets": [
    {
      "name": "Quote Page Header"
    }
  ]
}
{% endschema %}
