{{ 'gls-request-quote.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .section-{{ section.id }} .gls-quote-container {
    max-width: {{ section.settings.section_max_width }}px;
  }

  .section-{{ section.id }} .gls-quote-header-grid {
    align-items: {{ section.settings.vertical_alignment }};
    justify-items: {{ section.settings.horizontal_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  .section-{{ section.id }} .gls-quote-header-image {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
    object-fit: {{ section.settings.image_object_fit }};
    object-position: {{ section.settings.image_object_position }};
    border-radius: {{ section.settings.image_border_radius }}px;
  }
  
  /* If width is set to 0 (auto), let it be responsive */
  {% if section.settings.image_width == 0 %}
  .section-{{ section.id }} .gls-quote-header-image {
    width: 100%;
  }
  {% endif %}

  /* If height is set to 0 (auto) */
  {% if section.settings.image_height == 0 %}
  .section-{{ section.id }} .gls-quote-header-image {
    height: auto;
  }
  {% endif %}

  .section-{{ section.id }} .gls-quote-header-title {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
  }

  .section-{{ section.id }} .gls-quote-header-tagline {
    font-size: {{ section.settings.tagline_font_size }}px;
    color: {{ section.settings.tagline_color }};
  }
  
  .section-{{ section.id }} .gls-quote-header-content-col {
     align-items: {{ section.settings.content_horizontal_alignment }};
  }

{%- endstyle -%}

<div class="gls-quote-section section-{{ section.id }}-padding section-{{ section.id }}">
  <div class="gls-quote-container">
    <div class="gls-quote-header-grid">
      
      <!-- Left Column: Image -->
      <div class="gls-quote-header-image-col">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1000 | image_tag:
            class: 'gls-quote-header-image',
            loading: 'eager',
            alt: section.settings.image.alt | default: section.settings.heading | escape
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg gls-quote-header-image' }}
        {%- endif -%}
      </div>

      <!-- Right Column: Content -->
      <div class="gls-quote-header-content-col">
        {%- if section.settings.heading != blank -%}
          <{{ section.settings.heading_tag }} class="gls-quote-header-title">
            {{ section.settings.heading }}
          </{{ section.settings.heading_tag }}>
        {%- endif -%}

        {%- if section.settings.tagline != blank -%}
          <{{ section.settings.tagline_tag }} class="gls-quote-header-tagline">
            {{ section.settings.tagline }}
          </{{ section.settings.tagline_tag }}>
        {%- endif -%}
      </div>

    </div>
  </div>
</div>

