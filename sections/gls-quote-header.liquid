{{ 'gls-request-quote.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .gls-quote-section--header .gls-quote-header {
    max-width: {{ section.settings.section_width }}px;
    gap: {{ section.settings.column_gap }}px;
    padding: {{ section.settings.section_padding_y }}px {{ section.settings.section_padding_x }}px;
    background-color: {{ section.settings.section_bg_color }};
    border-radius: {{ section.settings.section_border_radius }}px;
  }
  .gls-quote-section--header .gls-quote-header__image-column {
    flex: 0 0 {{ section.settings.image_column_width }}%;
  }
  .gls-quote-section--header .gls-quote-header__image {
    width: 100%;
    max-width: {{ section.settings.image_max_width }}px;
    border-radius: {{ section.settings.image_border_radius }}px;
  }
  .gls-quote-section--header .gls-quote-header__content {
    text-align: {{ section.settings.content_alignment }};
  }
  .gls-quote-section--header .gls-quote-header__title {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  }
  .gls-quote-section--header .gls-quote-header__tagline {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.tagline_color }};
    line-height: {{ section.settings.tagline_line_height }};
  }
{%- endstyle -%}

<div class="gls-quote-section gls-quote-section--header">
  <div class="gls-quote-container">
    
    {%- if section.settings.show_breadcrumbs -%}
    <!-- Breadcrumbs -->
    <nav class="gls-breadcrumbs" aria-label="Breadcrumb">
      <a href="{{ routes.root_url }}">Home</a>
      <span>/</span>
      <span aria-current="page">{{ page.title }}</span>
    </nav>
    {%- endif -%}

    <!-- Page Header - Two Column Grid -->
    <div class="gls-quote-header">
      <!-- Left Column: Image -->
      <div class="gls-quote-header__image-column">
        {%- if section.settings.header_image != blank -%}
          <img 
            src="{{ section.settings.header_image | image_url: width: section.settings.image_max_width | times: 2 }}" 
            alt="{{ section.settings.heading | escape }}"
            class="gls-quote-header__image"
            loading="eager"
          >
        {%- else -%}
          <div class="gls-quote-header__image-placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>
      
      <!-- Right Column: Content -->
      <div class="gls-quote-header__content">
        <{{ section.settings.heading_tag | default: 'h1' }} class="gls-quote-header__title">
          {{ section.settings.heading | default: page.title }}
        </{{ section.settings.heading_tag | default: 'h1' }}>
        
        {%- if section.settings.tagline != blank -%}
          <p class="gls-quote-header__tagline">{{ section.settings.tagline }}</p>
        {%- endif -%}
      </div>
    </div>

  </div>
</div>

