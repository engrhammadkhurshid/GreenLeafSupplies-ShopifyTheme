{{ 'gls-our-mission.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .gls-our-mission-{{ section.id }} {
    max-width: {{ section.settings.max_width }}px;
    background-color: {{ section.settings.background_color }};
  }

  .gls-our-mission-{{ section.id }} .gls-our-mission__headline {
    font-family: {{ section.settings.headline_font }};
    font-size: {{ section.settings.headline_size }}px;
    color: {{ section.settings.headline_color }};
    text-align: {{ section.settings.headline_alignment }};
    line-height: {{ section.settings.headline_line_height }};
  }

  .gls-our-mission-{{ section.id }} .gls-our-mission__content {
    font-family: {{ section.settings.content_font }};
    font-size: {{ section.settings.content_size }}px;
    color: {{ section.settings.content_color }};
    text-align: {{ section.settings.content_alignment }};
    line-height: {{ section.settings.content_line_height }};
  }

  .gls-our-mission-{{ section.id }} .gls-our-mission__left-column {
    padding: {{ section.settings.left_column_padding }}px;
  }

  .gls-our-mission-{{ section.id }} .gls-our-mission__right-column {
    padding: {{ section.settings.right_column_padding }}px;
  }
{%- endstyle -%}

<div class="gls-our-mission-wrapper section-{{ section.id }}-padding">
  <div class="gls-our-mission gls-our-mission-{{ section.id }}">
    <div class="gls-our-mission__grid">
      <!-- Left Column: Headline -->
      <div class="gls-our-mission__left-column">
        {%- if section.settings.headline_text != blank -%}
          <{{ section.settings.headline_tag }} class="gls-our-mission__headline">
            {{ section.settings.headline_text }}
          </{{ section.settings.headline_tag }}>
        {%- endif -%}
      </div>

      <!-- Right Column: Rich Text -->
      <div class="gls-our-mission__right-column">
        {%- if section.settings.content_text != blank -%}
          <div class="gls-our-mission__content rte">
            {{ section.settings.content_text }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

