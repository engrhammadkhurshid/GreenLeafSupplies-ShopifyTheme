{{ 'gls-request-quote.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .gls-quote-section--contact .gls-quote-contact-grid {
    max-width: {{ section.settings.section_width }}px;
    gap: {{ section.settings.column_gap }}px;
    padding: {{ section.settings.section_padding }}px;
    background-color: {{ section.settings.section_bg_color }};
    border-radius: {{ section.settings.section_border_radius }}px;
  }
  .gls-quote-section--contact .gls-contact-content {
    text-align: {{ section.settings.content_alignment }};
  }
  .gls-quote-section--contact .gls-contact-heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  }
  .gls-quote-section--contact .gls-contact-text {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: {{ section.settings.text_line_height }};
    margin-bottom: {{ section.settings.text_margin_bottom }}px;
  }
  .gls-quote-section--contact .gls-contact-buttons {
    gap: {{ section.settings.buttons_gap }}px;
    justify-content: {{ section.settings.buttons_alignment }};
  }
  .gls-quote-section--contact .gls-contact-btn {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
  }
  .gls-quote-section--contact .gls-contact-btn:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
  }
  .gls-quote-section--contact .gls-contact-btn svg {
    width: {{ section.settings.button_icon_size }}px;
    height: {{ section.settings.button_icon_size }}px;
  }
  .gls-quote-section--contact .gls-contact-image-column {
    flex: 0 0 {{ section.settings.image_column_width }}%;
  }
  .gls-quote-section--contact .gls-contact-image {
    border-radius: {{ section.settings.image_border_radius }}px;
    max-width: {{ section.settings.image_max_width }}px;
  }
{%- endstyle -%}

<div class="gls-quote-section gls-quote-section--contact">
  <div class="gls-quote-container">
    
    <!-- Two Column Grid -->
    <div class="gls-quote-contact-grid">
      
      <!-- Left Column: Content -->
      <div class="gls-contact-content">
        <{{ section.settings.heading_tag }} class="gls-contact-heading">{{ section.settings.contact_heading | default: 'Prefer to Talk?' }}</{{ section.settings.heading_tag }}>
        
        {%- if section.settings.contact_text != blank -%}
          <p class="gls-contact-text">{{ section.settings.contact_text }}</p>
        {%- endif -%}
        
        <div class="gls-contact-buttons">
          {%- if section.settings.phone_number != blank -%}
            <a href="tel:{{ section.settings.phone_number }}" class="gls-contact-btn">
              {%- if section.settings.show_phone_icon -%}
                {%- if section.settings.phone_icon_svg != blank -%}
                  {{ section.settings.phone_icon_svg }}
                {%- else -%}
                  <svg aria-hidden="true" focusable="false" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                {%- endif -%}
              {%- endif -%}
              {{ section.settings.phone_button_text | default: section.settings.phone_number }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.email_address != blank -%}
            <a href="mailto:{{ section.settings.email_address }}" class="gls-contact-btn">
              {%- if section.settings.show_email_icon -%}
                {%- if section.settings.email_icon_svg != blank -%}
                  {{ section.settings.email_icon_svg }}
                {%- else -%}
                  <svg aria-hidden="true" focusable="false" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="2" y="4" width="20" height="16" rx="2" stroke="currentColor" stroke-width="1.5"/><path d="M2 7l10 6 10-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                {%- endif -%}
              {%- endif -%}
              {{ section.settings.email_button_text | default: section.settings.email_address }}
            </a>
          {%- endif -%}
        </div>
      </div>
      
      <!-- Right Column: Image -->
      <div class="gls-contact-image-column">
        {%- if section.settings.contact_image != blank -%}
          <img 
            src="{{ section.settings.contact_image | image_url: width: section.settings.image_max_width | times: 2 }}"
            alt="{{ section.settings.contact_heading | escape }}"
            class="gls-contact-image"
            loading="lazy"
          >
        {%- else -%}
          <div class="gls-contact-image-placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>
      
    </div>

  </div>
</div>

