{{ 'gls-core-values.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ section.settings.padding_left | times: 0.75 | round: 0 }}px;
    padding-right: {{ section.settings.padding_right | times: 0.75 | round: 0 }}px;
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .gls-core-values-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  .gls-core-values-{{ section.id }} .gls-core-values__container {
    max-width: {{ section.settings.container_width }}px;
  }

  /* Dynamic Settings for Headings */
  .gls-core-values-{{ section.id }} .gls-core-values__header {
    text-align: {{ section.settings.heading_alignment }};
  }

  .gls-core-values-{{ section.id }} .gls-core-values__subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    font-family: {{ section.settings.subheading_font_family }};
  }
  
  .gls-core-values-{{ section.id }} .gls-core-values__subheading::after {
    border-bottom-color: {{ section.settings.subheading_line_color }};
  }

  .gls-core-values-{{ section.id }} .gls-core-values__heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    font-family: {{ section.settings.heading_font_family }};
  }

  /* Dynamic Settings for Blocks */
  .gls-core-values-{{ section.id }} .gls-core-values__item {
    border-bottom: 1px solid {{ section.settings.border_color }};
  }
{%- endstyle -%}

<div class="gls-core-values gls-core-values-{{ section.id }} section-{{ section.id }}-padding" id="fw_icon_snippet_2">
  <div class="gls-core-values__container">
    
    <!-- Section Header -->
    <div class="gls-core-values__header">
      {%- if section.settings.subheading != blank -%}
        <span class="gls-core-values__subheading">{{ section.settings.subheading }}</span>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="gls-core-values__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
    </div>

    <!-- Content Rows -->
    <div class="gls-core-values__rows">
      {%- for block in section.blocks -%}
        <div class="gls-core-values__item" {{ block.shopify_attributes }}>
          
          <!-- Number -->
          <div class="gls-core-values__number" style="color: {{ block.settings.number_color }}; font-size: {{ block.settings.number_size }}px;">
            {{ block.settings.number }}
          </div>

          <!-- Icon -->
          <div class="gls-core-values__icon">
            {%- if block.settings.icon_image != blank -%}
              {{ block.settings.icon_image | image_url: width: block.settings.icon_width | image_tag: loading: 'lazy', class: 'gls-core-values__icon-img', style: 'width: 100%; height: auto;' }}
            {%- endif -%}
          </div>

          <!-- Description -->
          <div class="gls-core-values__content">
            <h3 class="gls-core-values__item-title" style="color: {{ block.settings.title_color }}; font-size: {{ block.settings.title_size }}px;">
              {{ block.settings.title }}
            </h3>
            <div class="gls-core-values__item-text" style="color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px;">
              {{ block.settings.text }}
            </div>
          </div>

        </div>
      {%- endfor -%}
    </div>

  </div>
</div>

