{% comment %}
  GLS Footer - Green Leaf Supplies Custom Footer
  Matches the brand design with newsletter, 4-column layout, and bottom bar
{% endcomment %}

{{ 'gls-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .gls-footer-section {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .gls-footer-section {
      margin-top: {{ section.settings.margin_top }}px;
    }
  }

  .gls-footer-newsletter__title {
    color: {{ section.settings.newsletter_title_color }};
    font-size: {{ section.settings.newsletter_title_size }}px;
  }

  .gls-footer-newsletter__description {
    color: {{ section.settings.newsletter_desc_color }};
    font-size: {{ section.settings.newsletter_desc_size }}px;
  }

  .gls-footer-brand__description {
    color: {{ section.settings.brand_desc_color }};
    font-size: {{ section.settings.brand_desc_size }}px;
  }

  .gls-footer-column__heading {
    color: {{ section.settings.column_heading_color }};
    font-size: {{ section.settings.column_heading_size }}px;
  }

  .gls-footer-menu__link, .gls-footer-contact__item {
    color: {{ section.settings.link_color }};
    font-size: {{ section.settings.link_size }}px;
  }
{%- endstyle -%}

<footer class="gls-footer-section">
  <!-- Newsletter Section -->
  {% if section.settings.newsletter_enable %}
  <section class="gls-footer-newsletter">
    <div class="gls-footer-newsletter__container">
      <div class="gls-footer-newsletter__content">
        <div class="gls-footer-newsletter__icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
        </div>
        <div class="gls-footer-newsletter__text">
          <{{ section.settings.newsletter_title_tag }} class="gls-footer-newsletter__title">{{ section.settings.newsletter_title }}</{{ section.settings.newsletter_title_tag }}>
          <p class="gls-footer-newsletter__description">{{ section.settings.newsletter_description }}</p>
        </div>
      </div>
      <div class="gls-footer-newsletter__form">
        {% form 'customer', class: 'gls-newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="gls-newsletter-form__wrapper">
            <input
              type="email"
              name="contact[email]"
              id="footer-newsletter-email"
              class="gls-newsletter-form__input"
              placeholder="{{ section.settings.newsletter_placeholder }}"
              required
              autocomplete="email"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="footer-newsletter-error"
              {% endif %}
            >
            <button type="submit" class="gls-newsletter-form__button">
              {{ section.settings.newsletter_button_text }}
            </button>
          </div>
          {% if form.errors contains 'email' %}
            <p id="footer-newsletter-error" class="gls-newsletter-form__error">
              {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
            </p>
          {% endif %}
          {% if form.posted_successfully? %}
            <p class="gls-newsletter-form__success">
              {{ section.settings.newsletter_success_message }}
            </p>
          {% endif %}
        {% endform %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Main Footer Content -->
  <section class="gls-footer-main">
    <div class="gls-footer-main__container">
      <!-- Brand Column -->
      <div class="gls-footer-column gls-footer-column--brand">
        <div class="gls-footer-brand">
          {% if section.settings.logo != blank %}
            <a href="{{ routes.root_url }}" class="gls-footer-brand__logo-link">
              <img
                src="{{ section.settings.logo | image_url: width: 200 }}"
                alt="{{ shop.name }}"
                class="gls-footer-brand__logo"
                width="{{ section.settings.logo_width }}"
                height="auto"
                loading="lazy"
              >
            </a>
          {% else %}
            <a href="{{ routes.root_url }}" class="gls-footer-brand__name">
              {{ shop.name }}
            </a>
          {% endif %}
        </div>
        <p class="gls-footer-brand__description">
          {{ section.settings.brand_description }}
        </p>
        
        <!-- Custom Social Media Row -->
        <div class="gls-footer-social-row" style="
          margin-top: {{ section.settings.social_row_margin_top }}px;
          margin-bottom: {{ section.settings.social_row_margin_bottom }}px;
          padding-top: {{ section.settings.social_row_padding_top }}px;
          padding-bottom: {{ section.settings.social_row_padding_bottom }}px;
          padding-left: {{ section.settings.social_row_padding_left }}px;
          padding-right: {{ section.settings.social_row_padding_right }}px;
          background-color: {{ section.settings.social_row_background_color }};
          border-radius: {{ section.settings.social_row_border_radius }}px;
        ">
          {% for block in section.blocks %}
            {% if block.type == 'social_icon' %}
              <a href="{{ block.settings.link }}" class="gls-footer-social-icon" target="_blank" rel="noopener" aria-label="{{ block.settings.icon_type }}">
                <div class="gls-footer-social-icon__container" style="
                  background-color: {{ block.settings.background_color }};
                  border-radius: {% if block.settings.background_shape == 'circle' %}50%{% elsif block.settings.background_shape == 'square' %}0{% else %}8px{% endif %};
                ">
                  {% case block.settings.icon_type %}
                    {% when 'facebook' %}
                      <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" style="color: {{ block.settings.icon_color }};">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    {% when 'instagram' %}
                      <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" style="color: {{ block.settings.icon_color }};">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                      </svg>
                    {% when 'tiktok' %}
                      <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" style="color: {{ block.settings.icon_color }};">
                        <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                      </svg>
                    {% when 'youtube' %}
                      <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" style="color: {{ block.settings.icon_color }};">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                      </svg>
                  {% endcase %}
                </div>
              </a>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Social Icons -->
        {% if section.settings.show_social %}
        <div class="gls-footer-social">
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="gls-footer-social__link" target="_blank" rel="noopener" aria-label="Twitter">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="gls-footer-social__link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="gls-footer-social__link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_linkedin_link != blank %}
            <a href="{{ settings.social_linkedin_link }}" class="gls-footer-social__link" target="_blank" rel="noopener" aria-label="LinkedIn">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          {% endif %}
        </div>
        {% endif %}
      </div>

      <!-- Dynamic Menu Columns -->
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            <div class="gls-footer-column gls-footer-column--menu" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h4 class="gls-footer-column__title">{{ block.settings.heading }}</h4>
              {% endif %}
              {% if block.settings.menu != blank %}
                <ul class="gls-footer-menu">
                  {% for link in block.settings.menu.links %}
                    <li class="gls-footer-menu__item">
                      <a href="{{ link.url }}" class="gls-footer-menu__link">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          {% when 'contact' %}
            <div class="gls-footer-column gls-footer-column--contact" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h4 class="gls-footer-column__title">{{ block.settings.heading }}</h4>
              {% endif %}
              <ul class="gls-footer-contact">
                {% if block.settings.address != blank %}
                  <li class="gls-footer-contact__item">
                    <span class="gls-footer-contact__icon">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                        <circle cx="12" cy="10" r="3"/>
                      </svg>
                    </span>
                    <span class="gls-footer-contact__text">{{ block.settings.address }}</span>
                  </li>
                {% endif %}
                {% if block.settings.phone != blank %}
                  <li class="gls-footer-contact__item">
                    <span class="gls-footer-contact__icon">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                      </svg>
                    </span>
                    <div class="gls-footer-contact__phones">
                      <a href="tel:{{ block.settings.phone | remove: ' ' | remove: '-' }}" class="gls-footer-contact__link">{{ block.settings.phone }}</a>
                      {% if block.settings.fax != blank %}
                        <span class="gls-footer-contact__fax">Fax: {{ block.settings.fax }}</span>
                      {% endif %}
                    </div>
                  </li>
                {% endif %}
                {% if block.settings.email != blank %}
                  <li class="gls-footer-contact__item">
                    <span class="gls-footer-contact__icon">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                        <polyline points="22,6 12,13 2,6"/>
                      </svg>
                    </span>
                    <a href="mailto:{{ block.settings.email }}" class="gls-footer-contact__link">{{ block.settings.email }}</a>
                  </li>
                {% endif %}
              </ul>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </section>

  <!-- Bottom Bar -->
  <section class="gls-footer-bottom">
    <div class="gls-footer-bottom__container">
      <div class="gls-footer-bottom__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </div>
      
      <div class="gls-footer-bottom__links">
        {% if section.settings.privacy_link != blank %}
          <a href="{{ section.settings.privacy_link }}" class="gls-footer-bottom__link">Privacy Policy</a>
        {% endif %}
        {% if section.settings.terms_link != blank %}
          <a href="{{ section.settings.terms_link }}" class="gls-footer-bottom__link">Terms of Service</a>
        {% endif %}
        {% if section.settings.sitemap_link != blank %}
          <a href="{{ section.settings.sitemap_link }}" class="gls-footer-bottom__link">Sitemap</a>
        {% endif %}
      </div>

      {% if section.settings.show_payment_icons %}
      <div class="gls-footer-bottom__payments">
        {% if section.settings.payment_image != blank %}
          <div class="gls-footer-payment-image-wrapper" style="background-color: #fff; padding: 5px 10px; border-radius: 4px; display: inline-block;">
            <img
              src="{{ section.settings.payment_image | image_url: width: section.settings.payment_image_width }}"
              alt="Payment Methods"
              width="{{ section.settings.payment_image_width }}"
              height="auto"
              loading="lazy"
              style="display: block; max-width: 100%; height: auto;"
            >
          </div>
        {% else %}
          <span class="gls-footer-bottom__payments-label">Secure Payments:</span>
          <div class="gls-footer-payment-icons">
            {% for type in shop.enabled_payment_types %}
              <span class="gls-footer-payment-icon">{{ type | payment_type_svg_tag }}</span>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </section>
</footer>

{% schema %}
{
  "name": "GLS Footer",
  "tag": "section",
  "class": "gls-footer-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Join our Green Business Network"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter description",
      "default": "Get sustainability tips and exclusive B2B offers."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "newsletter_success_message",
      "label": "Success message",
      "default": "Thanks for subscribing!"
    },
    {
      "type": "header",
      "content": "Newsletter Typography"
    },
    {
      "type": "range",
      "id": "newsletter_heading_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Newsletter Heading Size",
      "default": 24
    },
    {
      "type": "select",
      "id": "newsletter_heading_tag",
      "label": "Newsletter Heading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" },
        { "value": "p", "label": "Paragraph" },
        { "value": "span", "label": "Span" }
      ],
      "default": "h3"
    },
    {
      "type": "color",
      "id": "newsletter_heading_color",
      "label": "Newsletter Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "newsletter_text_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Newsletter Text Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "newsletter_text_color",
      "label": "Newsletter Text Color",
      "default": "#e2e8f0"
    },
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 150,
      "unit": "px"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand description",
      "default": "Industrial-grade packaging solutions designed for the circular economy. We help businesses scale without the waste."
    },
    {
      "type": "header",
      "content": "Social Media Row"
    },
    {
      "type": "range",
      "id": "social_row_margin_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Social Row Margin Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "social_row_margin_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Social Row Margin Bottom",
      "default": 20
    },
    {
      "type": "range",
      "id": "social_row_padding_top",
      "min": 0,
