{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .article-cta-container {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    border-radius: 8px;
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    border: 1px solid #e5e5e5;
  }

  .article-cta-header {
    margin-bottom: 40px;
  }

  .article-cta-title {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin: 0 0 10px 0;
    line-height: 1.2;
  }

  .article-cta-tagline {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .article-cta-options {
    display: flex;
    flex-direction: column;
    gap: 40px;
    justify-content: center;
    align-items: flex-start;
  }

  @media screen and (min-width: 750px) {
    .article-cta-options {
      flex-direction: row;
      gap: 80px;
    }
  }

  .article-cta-option {
    flex: 1;
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .article-cta-option h3 {
    font-size: 22px;
    margin: 0 0 15px 0;
    color: {{ section.settings.heading_color }};
  }

  .article-cta-option p {
    margin: 0 0 25px 0;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
  }

  .article-cta-btn {
    display: inline-block;
    padding: 14px 32px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    font-size: 16px;
    transition: opacity 0.3s;
    width: 100%;
    max-width: 280px;
  }
  .article-cta-btn:hover {
    opacity: 0.9;
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="article-cta-container">
    <div class="article-cta-header">
      <h2 class="article-cta-title">{{ section.settings.heading }}</h2>
      <p class="article-cta-tagline">{{ section.settings.tagline }}</p>
    </div>

    <div class="article-cta-options">
      <!-- Option A -->
      <div class="article-cta-option">
        <h3>{{ section.settings.option_a_title }}</h3>
        <p>{{ section.settings.option_a_desc }}</p>
        <a href="{{ section.settings.option_a_link }}" class="article-cta-btn" style="background-color: {{ section.settings.option_a_btn_bg }}; color: {{ section.settings.option_a_btn_text }};">
          {{ section.settings.option_a_btn_label }}
        </a>
      </div>

      <!-- Option B -->
      <div class="article-cta-option">
        <h3>{{ section.settings.option_b_title }}</h3>
        <p>{{ section.settings.option_b_desc }}</p>
        <a href="{{ section.settings.option_b_link }}" class="article-cta-btn" style="background-color: {{ section.settings.option_b_btn_bg }}; color: {{ section.settings.option_b_btn_text }};">
          {{ section.settings.option_b_btn_label }}
        </a>
      </div>
    </div>
  </div>
</div>

