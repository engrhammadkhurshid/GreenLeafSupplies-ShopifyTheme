{{ 'gls-about.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #shopify-section-{{ section.id }} .gls-about__heading {
    color: {{ section.settings.heading_color }};
    font-size: clamp({{ section.settings.heading_size | times: 0.6 }}px, 4vw, {{ section.settings.heading_size }}px);
  }

  #shopify-section-{{ section.id }} .gls-about__text p {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
  }
{%- endstyle -%}

<section class="gls-about section-{{ section.id }}-padding">
  <div class="gls-about__container page-width">
    <div class="gls-about__grid">
      <div class="gls-about__image-column">
        <div class="gls-about__image-wrapper">
          <div class="gls-about__image-accent"></div>
          {%- if section.settings.image != blank -%}
            <img
              src="{{ section.settings.image | image_url: width: section.settings.image_width }}"
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="gls-about__image"
              style="height: {{ section.settings.image_height }}px; object-fit: cover;"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'gls-about__image gls-about__image--placeholder' }}
          {%- endif -%}
        </div>
      </div>

      <div class="gls-about__content-column">
        {%- if section.settings.heading != blank -%}
          <{{ section.settings.heading_tag }} class="gls-about__heading">{{ section.settings.heading }}</{{ section.settings.heading_tag }}>
        {%- endif -%}
        
        <div class="gls-about__divider"></div>
        
        <div class="gls-about__text">
          {%- for block in section.blocks -%}
            {%- if block.type == 'paragraph' -%}
              <p {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
            {%- endif -%}
          {%- endfor -%}
        </div>

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="gls-about__button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{%- style -%}
  .section-{{ section.id }}-padding {
    content-visibility: auto;
    contain-intrinsic-size: 1000px; 
  }
{%- endstyle -%}

{% schema %}
{
  "name": "GLS About Section",
  "tag": "section",
  "class": "gls-about-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 300,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Image Width",
      "default": 800
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 200,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Image Height",
      "default": 500
    },
    {
      "type": "select",
      "id": "image_object_fit",
      "label": "Image Object Fit",
      "options": [
        { "value": "cover", "label": "Cover" },
        { "value": "contain", "label": "Contain" },
        { "value": "fill", "label": "Fill" },
        { "value": "none", "label": "None" },
        { "value": "scale-down", "label": "Scale Down" }
      ],
      "default": "cover"
    },
    {
      "type": "text",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "Committed to being the finest source for premium packaging."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Green Leaf Supplies"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" },
        { "value": "p", "label": "Paragraph" },
        { "value": "span", "label": "Span" }
      ],
      "default": "h2"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading Size (Desktop)",
      "default": 48
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#060316"
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#555555"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Read Our Full Mission"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 80,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 80,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "blocks": [
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "At GreenLeaf Supplies, our mission is to provide the highest-quality food packaging products in the U.S. market."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GLS About Section",
      "blocks": [
        {
          "type": "paragraph",
          "settings": {
            "text": "At GreenLeaf Supplies, our mission is to provide the highest-quality food packaging products in the U.S. market. We are committed to being the finest and most trusted source for premium, reliable, and sustainable packaging solutions."
          }
        },
        {
          "type": "paragraph",
          "settings": {
            "text": "By focusing on excellence, innovation, and customer satisfaction, we strive to support businesses nationwide with products that uphold the highest standards of safety, durability, and performance."
          }
        },
        {
          "type": "paragraph",
          "settings": {
            "text": "As one of the leading food-packaging suppliers on the U.S. East Coast, we are expanding our reach to serve customers across the entire nation."
          }
        }
      ]
    }
  ]
}
{% endschema %}
