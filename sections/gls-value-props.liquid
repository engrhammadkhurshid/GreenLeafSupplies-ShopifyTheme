{{ 'gls-value-props.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="gls-value-props section-{{ section.id }}-padding">
  <div class="gls-value-props__container page-width">
    <div class="gls-value-props__grid">
      {%- for block in section.blocks -%}
        <div class="gls-value-props__item" {{ block.shopify_attributes }}>
          <div class="gls-value-props__icon">
            {%- case block.settings.icon -%}
              {%- when 'layers' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 2 7 12 12 22 7 12 2"></polygon><polyline points="2 17 12 22 22 17"></polyline><polyline points="2 12 12 17 22 12"></polyline></svg>
              {%- when 'shield' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><polyline points="9 12 11 14 15 10"></polyline></svg>
              {%- when 'truck' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
              {%- when 'star' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              {%- when 'box' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
              {%- when 'leaf' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"></path><path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"></path></svg>
            {%- endcase -%}
          </div>
          <div class="gls-value-props__content">
            {%- if block.settings.title != blank -%}
              <strong class="gls-value-props__title">{{ block.settings.title }}</strong>
            {%- endif -%}
            {%- if block.settings.subtitle != blank -%}
              <span class="gls-value-props__subtitle">{{ block.settings.subtitle }}</span>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "GLS Value Props",
  "tag": "section",
  "class": "gls-value-props-section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 25,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 25,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "blocks": [
    {
      "type": "value_prop",
      "name": "Value Prop",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "layers",
          "options": [
            { "value": "layers", "label": "Layers (Wholesale)" },
            { "value": "shield", "label": "Shield (Quality)" },
            { "value": "truck", "label": "Truck (Delivery)" },
            { "value": "star", "label": "Star (Premium)" },
            { "value": "box", "label": "Box (Packaging)" },
            { "value": "leaf", "label": "Leaf (Eco)" }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Wholesale Pricing"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Tiered discounts available"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GLS Value Props",
      "blocks": [
        {
          "type": "value_prop",
          "settings": {
            "icon": "layers",
            "title": "Wholesale Pricing",
            "subtitle": "Tiered discounts available"
          }
        },
        {
          "type": "value_prop",
          "settings": {
            "icon": "shield",
            "title": "Trusted Quality",
            "subtitle": "Safety & Durability"
          }
        },
        {
          "type": "value_prop",
          "settings": {
            "icon": "truck",
            "title": "Nationwide Delivery",
            "subtitle": "Fast & Reliable Shipping"
          }
        },
        {
          "type": "value_prop",
          "settings": {
            "icon": "star",
            "title": "Premium Service",
            "subtitle": "Customer Satisfaction Focus"
          }
        }
      ]
    }
  ]
}
{% endschema %}
