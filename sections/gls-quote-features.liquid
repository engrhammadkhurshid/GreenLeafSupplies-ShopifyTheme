{{ 'gls-request-quote.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .gls-quote-section--features .gls-quote-features {
    max-width: {{ section.settings.section_width }}px;
    text-align: {{ section.settings.text_alignment }};
  }
  .gls-quote-section--features .gls-features-heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  }
  .gls-quote-section--features .gls-features-grid {
    gap: {{ section.settings.grid_gap }}px;
    justify-content: {{ section.settings.cards_alignment }};
  }
  .gls-quote-section--features .gls-feature-card {
    background-color: {{ section.settings.card_bg_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    text-align: {{ section.settings.card_text_alignment }};
  }
  .gls-quote-section--features .gls-feature-icon {
    color: {{ section.settings.icon_color }};
    margin-bottom: {{ section.settings.icon_margin_bottom }}px;
  }
  .gls-quote-section--features .gls-feature-icon svg,
  .gls-quote-section--features .gls-feature-icon img {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }
  .gls-quote-section--features .gls-feature-title {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }
  .gls-quote-section--features .gls-feature-text {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
  }
{%- endstyle -%}

<div class="gls-quote-section gls-quote-section--features">
  <div class="gls-quote-container">
    
    <!-- Why Request A Quote Grid -->
    <div class="gls-quote-features">
      <{{ section.settings.heading_tag }} class="gls-features-heading">{{ section.settings.features_heading | default: 'Why Request A Quote?' }}</{{ section.settings.heading_tag }}>
      <div class="gls-features-grid">
        {%- for block in section.blocks -%}
          <div class="gls-feature-card" {{ block.shopify_attributes }}>
            <div class="gls-feature-icon">
              {%- if block.settings.icon_image != blank -%}
                <img 
                  src="{{ block.settings.icon_image | image_url: width: section.settings.icon_size | times: 2 }}" 
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                >
              {%- elsif block.settings.icon_svg != blank -%}
                {{ block.settings.icon_svg }}
              {%- else -%}
                <svg aria-hidden="true" focusable="false" width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="20" cy="20" r="18" stroke="currentColor" stroke-width="2"/><path d="M12 20L17 25L28 14" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
              {%- endif -%}
            </div>
            <{{ block.settings.title_tag | default: 'h3' }} class="gls-feature-title">{{ block.settings.title }}</{{ block.settings.title_tag | default: 'h3' }}>
            <p class="gls-feature-text">{{ block.settings.text }}</p>
          </div>
        {%- endfor -%}
      </div>
    </div>

  </div>
</div>

