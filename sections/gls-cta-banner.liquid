{{ 'gls-cta-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="gls-cta-banner section-{{ section.id }}-padding">
  <div class="gls-cta-banner__container page-width">
    <div class="gls-cta-banner__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="gls-cta-banner__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <p class="gls-cta-banner__text">{{ section.settings.text }}</p>
      {%- endif -%}
    </div>
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="gls-cta-banner__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "GLS CTA Banner",
  "tag": "section",
  "class": "gls-cta-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Partner with Green Leaf Supplies"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "We fulfill all packaging and tableware requirements for our clients, providing dependable, durable, and premium solutions."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Get a Custom Quote"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 65,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 65,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "GLS CTA Banner"
    }
  ]
}
{% endschema %}
