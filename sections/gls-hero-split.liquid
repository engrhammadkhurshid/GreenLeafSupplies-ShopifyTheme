{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .gls-hero-split {
    position: relative;
    width: 100%;
    min-height: 100vh; /* Viewport height */
    display: flex;
    align-items: center;
    overflow: hidden;
    background-color: {{ section.settings.bg_overlay_color }};
  }

  .gls-hero-split__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .gls-hero-split__bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .gls-hero-split__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.bg_overlay_color }} !important;
    opacity: {{ section.settings.bg_overlay_opacity | divided_by: 100.0 }} !important;
    z-index: 1 !important;
    display: block !important;
    pointer-events: none;
  }

  .gls-hero-split__content-wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .gls-hero-split__content-wrapper {
      grid-template-columns: 1fr 1fr;
      padding: 0 5rem;
    }
  }

  /* Left Column Styles */
  .gls-hero-split__left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    max-width: 65rem;
  }

  .gls-hero-split__badge {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    font-size: 1.2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 4px;
    margin-bottom: 2.4rem;
  }

  .gls-hero-split__heading-wrapper {
    margin: 0 0 2rem;
    line-height: 1.1;
    font-weight: 800;
  }

  .gls-hero-split__heading-line-1 {
    display: block;
    color: {{ section.settings.heading_color_1 }};
    font-size: clamp({{ section.settings.heading_1_size | times: 0.6 }}px, 5vw, {{ section.settings.heading_1_size }}px);
    margin: 0;
    line-height: 1.1;
    font-weight: inherit;
  }

  .gls-hero-split__heading-line-2 {
    display: block;
    color: {{ section.settings.heading_color_2 }};
    font-size: clamp({{ section.settings.heading_2_size | times: 0.6 }}px, 5vw, {{ section.settings.heading_2_size }}px);
    margin: 0;
    line-height: 1.1;
    font-weight: inherit;
  }

  .gls-hero-split__subheading {
    font-size: clamp({{ section.settings.subheading_size | times: 0.8 }}px, 3vw, {{ section.settings.subheading_size }}px);
    line-height: 1.6;
    color: {{ section.settings.subheading_color }};
    margin-bottom: 4rem;
    max-width: 50rem;
    margin-top: 0;
  }

  .gls-hero-split__buttons {
    display: flex;
    gap: 1.6rem;
    flex-wrap: wrap;
  }

  .gls-hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.4rem 3.2rem;
    font-size: 1.6rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    cursor: pointer;
    min-width: 160px;
  }

  .gls-hero-btn--primary {
    background-color: {{ section.settings.btn_primary_bg }};
    color: {{ section.settings.btn_primary_text }};
    border: 2px solid {{ section.settings.btn_primary_bg }};
  }

  .gls-hero-btn--primary:hover {
    background-color: transparent;
    color: {{ section.settings.btn_primary_bg }};
  }

  .gls-hero-btn--secondary {
    background-color: transparent;
    color: {{ section.settings.btn_secondary_text }};
    border: 2px solid {{ section.settings.btn_secondary_border }};
  }

  .gls-hero-btn--secondary:hover {
    background-color: {{ section.settings.btn_secondary_border }};
    color: {{ section.settings.bg_overlay_color }}; /* Contrast against border color */
  }

  /* Right Column Styles */
  .gls-hero-split__right {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .gls-hero-split__right-image {
    width: {{ section.settings.right_image_width }}%;
    height: auto;
    object-fit: {{ section.settings.right_image_fit }};
    max-height: 80vh;
  }

{%- endstyle -%}

<div class="gls-hero-split section-{{ section.id }}-padding">
  
  <!-- Background Image -->
  <div class="gls-hero-split__bg">
    {%- if section.settings.bg_image != blank -%}
      {{ section.settings.bg_image | image_url: width: 3840 | image_tag:
        loading: 'eager',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
        alt: section.settings.bg_image.alt | escape
      }}
    {%- else -%}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>

  <!-- Overlay -->
  <div class="gls-hero-split__overlay"></div>

  <!-- Content -->
  <div class="gls-hero-split__content-wrapper">
    
    <!-- Left Column -->
    <div class="gls-hero-split__left">
      {%- if section.settings.badge_text != blank -%}
        <span class="gls-hero-split__badge">{{ section.settings.badge_text }}</span>
      {%- endif -%}

      <div class="gls-hero-split__heading-wrapper">
        {%- if section.settings.heading_line_1 != blank -%}
          <{{ section.settings.heading_1_tag }} class="gls-hero-split__heading-line-1">{{ section.settings.heading_line_1 }}</{{ section.settings.heading_1_tag }}>
        {%- endif -%}
        {%- if section.settings.heading_line_2 != blank -%}
          <{{ section.settings.heading_2_tag }} class="gls-hero-split__heading-line-2">{{ section.settings.heading_line_2 }}</{{ section.settings.heading_2_tag }}>
        {%- endif -%}
      </div>

      {%- if section.settings.subheading != blank -%}
        <{{ section.settings.subheading_tag }} class="gls-hero-split__subheading">
          {{ section.settings.subheading }}
        </{{ section.settings.subheading_tag }}>
      {%- endif -%}

      <div class="gls-hero-split__buttons">
        {%- if section.settings.btn_primary_label != blank -%}
          <a href="{{ section.settings.btn_primary_link }}" class="gls-hero-btn gls-hero-btn--primary">
            {{ section.settings.btn_primary_label }}
          </a>
        {%- endif -%}
        {%- if section.settings.btn_secondary_label != blank -%}
          <a href="{{ section.settings.btn_secondary_link }}" class="gls-hero-btn gls-hero-btn--secondary">
            {{ section.settings.btn_secondary_label }}
          </a>
        {%- endif -%}
      </div>
    </div>

    <!-- Right Column -->
    <div class="gls-hero-split__right">
      {%- if section.settings.right_image != blank -%}
        {{ section.settings.right_image | image_url: width: 1500 | image_tag:
          loading: 'eager',
          class: 'gls-hero-split__right-image',
          alt: section.settings.right_image.alt | escape
        }}
      {%- endif -%}
    </div>

  </div>
</div>

