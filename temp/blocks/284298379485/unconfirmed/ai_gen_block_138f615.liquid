{% doc %}
  @prompt
    A core values section with a headline and 4 icon box cards with headline and small body text and option to choose icon for each card and it's style (on left or on top of heading and body text) with background colour in each card, add option to choose icon from media image and also add option to add justigication to headline and body text.
    
    
    The background colour of the entire icon box card must be choosable , icon has no option to align it horizentally on the card width.
    
    also, all card must follow same customizations and we only have to add custom image option and headline/body text opions not card styling options. Card styling option must be 1 for all cards so they are all identical
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-core-values-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_background_color }};
  }

  .ai-core-values-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-core-values-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
  }

  .ai-core-values-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-core-values-card-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background_color }};
    transition: transform 0.3s ease;
  }

  .ai-core-values-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-core-values-card-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-core-values-card-content-{{ ai_gen_id }}.icon-left {
    flex-direction: row;
    align-items: flex-start;
  }

  .ai-core-values-card-content-{{ ai_gen_id }}.icon-top {
    flex-direction: column;
  }

  .ai-core-values-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-core-values-card-content-{{ ai_gen_id }}.icon-top .ai-core-values-icon-wrapper-{{ ai_gen_id }} {
    align-self: {{ block.settings.icon_horizontal_alignment }};
  }

  .ai-core-values-icon-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-core-values-icon-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-core-values-text-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-core-values-card-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.card_heading_spacing }}px;
    font-size: {{ block.settings.card_heading_size }}px;
    font-weight: 600;
    line-height: 1.3;
    color: {{ block.settings.card_text_color }};
    text-align: {{ block.settings.card_heading_alignment }};
  }

  .ai-core-values-card-text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.card_text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.card_text_color }};
    opacity: 0.9;
    text-align: {{ block.settings.card_text_alignment }};
  }

  @media screen and (max-width: 989px) {
    .ai-core-values-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-core-values-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-core-values-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-core-values-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<core-values-{{ ai_gen_id }} class="ai-core-values-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-core-values-container-{{ ai_gen_id }}">
    {% if block.settings.main_heading != blank %}
      <h2 class="ai-core-values-heading-{{ ai_gen_id }}">{{ block.settings.main_heading }}</h2>
    {% endif %}

    <div class="ai-core-values-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign card_enabled_key = 'card_' | append: i | append: '_enabled'
          assign card_heading_key = 'card_' | append: i | append: '_heading'
          assign card_text_key = 'card_' | append: i | append: '_text'
          assign card_icon_key = 'card_' | append: i | append: '_icon'
          assign card_icon_image_key = 'card_' | append: i | append: '_icon_image'

          assign card_enabled = block.settings[card_enabled_key]
          assign card_heading = block.settings[card_heading_key]
          assign card_text = block.settings[card_text_key]
          assign card_icon = block.settings[card_icon_key]
          assign card_icon_image = block.settings[card_icon_image_key]
        %}

        {% if card_enabled %}
          <div class="ai-core-values-card-{{ ai_gen_id }}">
            <div class="ai-core-values-card-content-{{ ai_gen_id }} icon-{{ block.settings.icon_position }}">
              <div class="ai-core-values-icon-wrapper-{{ ai_gen_id }}">
                {% if card_icon_image != blank %}
                  <img
                    src="{{ card_icon_image | image_url: width: 200 }}"
                    alt="{{ card_heading | escape }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                {% else %}
                  {% case card_icon %}
                    {% when 'star' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                      </svg>
                    {% when 'heart' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                      </svg>
                    {% when 'shield' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                      </svg>
                    {% when 'award' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="8" r="7"></circle>
                        <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                      </svg>
                    {% when 'target' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <circle cx="12" cy="12" r="6"></circle>
                        <circle cx="12" cy="12" r="2"></circle>
                      </svg>
                    {% when 'users' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                      </svg>
                    {% when 'lightbulb' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 18h6"></path>
                        <path d="M10 22h4"></path>
                        <path d="M15.09 14c.18-.98.65-1.74 1.41-2.5A4.65 4.65 0 0 0 18 8 6 6 0 0 0 6 8c0 1 .23 2.23 1.5 3.5A4.61 4.61 0 0 1 8.91 14"></path>
                      </svg>
                    {% when 'thumbs-up' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                      </svg>
                    {% when 'check-circle' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                      </svg>
                    {% when 'globe' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="2" y1="12" x2="22" y2="12"></line>
                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                      </svg>
                    {% when 'trending-up' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                        <polyline points="17 6 23 6 23 12"></polyline>
                      </svg>
                    {% when 'zap' %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                      </svg>
                  {% endcase %}
                {% endif %}
              </div>

              <div class="ai-core-values-text-content-{{ ai_gen_id }}">
                {% if card_heading != blank %}
                  <h3 class="ai-core-values-card-heading-{{ ai_gen_id }}">
                    {{ card_heading }}
                  </h3>
                {% endif %}

                {% if card_text != blank %}
                  <p class="ai-core-values-card-text-{{ ai_gen_id }}">
                    {{ card_text }}
                  </p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</core-values-{{ ai_gen_id }}>

<script>
  (function() {
    class CoreValues{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('core-values-{{ ai_gen_id }}', CoreValues{{ ai_gen_id }});
  })();
</script>

